<%- include("partials/header") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="mb-4">Nová rezervácia</h1>

      <div class="card mb-4 bg-light">
        <div class="card-body">
          <p class="card-text mb-1">
            <strong>Tréning:</strong> <%= session.title %>
          </p>
          <p class="card-text">
            <strong>Začiatok:</strong> <%= session.start_at.toLocaleString("sk-SK") %>
          </p>
        </div>
      </div>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Chyby pri validácii:</strong>
          <ul class="mb-0 mt-2">
            <% errors.forEach(e => { %>
              <li><%= e %></li>
            <% }) %>
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <form action="/rezervacie/new" method="POST" class="js-validate" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="session_id" value="<%= session.id %>" />

        <!-- Meno klienta sa berie z profilu prihláseného používateľa na serveri (session). -->

        <div class="mb-3">
          <label for="note" class="form-label">Poznámka (nepovinné)</label>
          <input
            type="text"
            class="form-control"
            id="note"
            name="note"
            value="<%= formData && formData.note ? formData.note : '' %>"
            placeholder="Napr. potrebujem pomoc pri cvičení..."
            maxlength="255"
          />
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-start">
          <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-calendar-check me-2" aria-hidden="true"></i>
            Potvrdiť rezerváciu
          </button>
          <a href="/treningy" class="btn btn-secondary">
            <i class="fa-solid fa-xmark me-2" aria-hidden="true"></i>
            Zrušiť
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
