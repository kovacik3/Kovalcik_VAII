<%- include("partials/header", { title: title }) %>

<h2>Nová rezervácia</h2>

<p>
  Tréning: <strong><%= session.title %></strong><br>
  Začiatok: <%= session.start_at.toLocaleString("sk-SK") %>
</p>

<% if (errors && errors.length > 0) { %>
  <ul style="color: red;">
    <% errors.forEach(e => { %>
      <li><%= e %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/rezervacie/new" method="POST">
  <input type="hidden" name="session_id" value="<%= session.id %>" />

  <div class="form-group">
    <label for="client_name">Meno klienta</label><br>
    <input
      type="text"
      id="client_name"
      name="client_name"
      value="<%= formData.client_name %>"
    />
  </div>

  <div class="form-group">
    <label for="note">Poznámka (nepovinné)</label><br>
    <input
      type="text"
      id="note"
      name="note"
      value="<%= formData.note %>"
    />
  </div>

  <button type="submit">Odoslať rezerváciu</button>
  <a href="/treningy">Späť na tréningy</a>
</form>

<%- include("partials/footer") %>
