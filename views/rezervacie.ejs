<%- include("partials/header") %>

<div class="container my-5">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="mb-4"><%= (isAdmin || isTrainer) ? "Rezervácie" : "Moje rezervácie" %></h1>
      <% if (!(isAdmin || isTrainer)) { %>
        <a href="/treningy" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nová rezervácia</a>
      <% } %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if (rezervacie.length === 0) { %>
        <% if (isAdmin || isTrainer) { %>
          <div class="alert alert-info">Zatiaľ neexistujú žiadne rezervácie.</div>
        <% } else { %>
          <div class="alert alert-info">Nemáte žiadne rezervácie. <a href="/treningy">Rezervujte si tréning!</a></div>
        <% } %>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <% if (isAdmin || isTrainer) { %>
                  <th>Používateľ</th>
                <% } %>
                <th>Tréning</th>
                <th>Začiatok</th>
                <th>Meno klienta (username)</th>
                <th>Poznámka</th>
                <th>Vytvorené</th>
                <th>Akcie</th>
              </tr>
            </thead>
            <tbody>
              <% rezervacie.forEach(r => { %>
                <tr>
                  <% if (isAdmin || isTrainer) { %>
                    <td><%= r.user_email || "—" %></td>
                  <% } %>
                  <td><%= r.session_title %></td>
                  <td>
                    <% if (r.session_start) { %>
                      <%= r.session_start.toLocaleString("sk-SK") %>
                    <% } else { %>
                      —
                    <% } %>
                  </td>
                  <td><%= r.client_username || r.client_name || "—" %></td>
                  <td><%= r.note || "—" %></td>
                  <td>
                    <% if (r.created_at) { %>
                      <%= r.created_at.toLocaleString("sk-SK") %>
                    <% } else { %>
                      —
                    <% } %>
                  </td>
                  <td>
                    <form action="/rezervacie/<%= r.id %>/delete" method="POST" style="display:inline;">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Naozaj zmazať túto rezerváciu?');">
                        <i class="fa-solid fa-trash" aria-hidden="true"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
