<%- include("partials/header") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="mb-4">Upraviť trénera</h1>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Chyby pri validácii:</strong>
          <ul class="mb-0 mt-2">
            <% errors.forEach(e => { %>
              <li><%= e %></li>
            <% }) %>
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <form action="/treneri/<%= trainer.id %>/edit?_csrf=<%= encodeURIComponent(csrfToken) %>" method="POST" enctype="multipart/form-data" class="js-validate" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="mb-3">
          <label for="name" class="form-label">Meno trénera</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= trainer.name %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="specialization" class="form-label">Špecializácia</label>
          <input
            type="text"
            class="form-control"
            id="specialization"
            name="specialization"
            value="<%= trainer.specialization %>"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Aktuálna fotka</label>
          <div class="d-flex align-items-center gap-3">
              <img
                class="trainer-avatar"
                src="<%= trainer.photo_path ? trainer.photo_path : '/images/user_icon.png' %>"
                alt="Aktuálna fotka trénera"
                onerror="this.onerror=null;this.src='/images/user_icon.png';"
              />
            <div class="text-muted" style="font-size: 0.95rem;">
              Nahraj novú fotku, ak ju chceš zmeniť.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="photo" class="form-label">Nová fotka (voliteľné)</label>
          <input
            type="file"
            class="form-control"
            id="photo"
            name="photo"
            accept="image/png,image/jpeg,image/webp"
          />
          <div class="form-text">Max 3MB. Podporované: JPG/PNG/WebP.</div>
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-start">
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk me-2" aria-hidden="true"></i>
            Uložiť zmeny
          </button>
          <a href="/treneri" class="btn btn-secondary">
            <i class="fa-solid fa-xmark me-2" aria-hidden="true"></i>
            Zrušiť
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
