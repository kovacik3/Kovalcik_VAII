<%- include("partials/header") %>

<div class="container my-5">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
        <h1 class="mb-0">Tréneri</h1>
        <% if (isAdmin) { %>
          <a href="/treneri/new" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Pridať trénera
          </a>
        <% } %>
      </div>
      <p class="text-muted mt-2 mb-0">Pozri si našich trénerov a ich špecializácie.</p>
    </div>
  </div>

  <% if (treneri.length === 0) { %>
    <div class="alert alert-info">Žiadni tréneri nie sú registrovaní.</div>
  <% } else { %>
    <div class="row g-4">
      <% treneri.forEach(trener => { %>
        <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
          <div class="card trainer-card h-100 shadow-sm">
            <img
                src="<%= trener.photo_path ? trener.photo_path : '/images/user_icon.png' %>"
                class="card-img-top trainer-card-img"
                alt="Fotka trénera <%= trener.name %>"
                onerror="this.onerror=null;this.src='/images/user_icon.png';"
            />
            <div class="card-body">
              <h5 class="card-title mb-1"><%= trener.name %></h5>
              <p class="card-text text-muted mb-0"><%= trener.specialization %></p>
            </div>

            <% if (isAdmin) { %>
              <div class="card-footer bg-white border-0 pt-0">
                <div class="d-flex gap-2">
                  <a href="/treneri/<%= trener.id %>/edit" class="btn btn-sm btn-outline-secondary rounded-3 flex-grow-1">
                    <i class="fa-solid fa-pen-to-square me-1" aria-hidden="true"></i>
                    Upraviť
                  </a>
                  <form action="/treneri/<%= trener.id %>/delete" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-3" onclick="return confirm('Naozaj zmazať tohto trénera?');">
                      <i class="fa-solid fa-trash" aria-hidden="true"></i>
                    </button>
                  </form>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include("partials/footer") %>
