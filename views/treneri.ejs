<%- include("partials/header") %>

<div class="container my-5">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="mb-4">Zoznam trénerov</h1>
      <% if (isAdmin) { %>
        <a href="/treneri/new" class="btn btn-success"><i class="fa-solid fa-plus"></i> Pridať trénera</a>
      <% } %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if (treneri.length === 0) { %>
        <div class="alert alert-info">Žiadni tréneri nie sú registrovaní.</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>Meno</th>
                <th>Špecializácia</th>
                <% if (isAdmin) { %>
                  <th>Akcie</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% treneri.forEach(trener => { %>
                <tr>
                  <td><%= trener.name %></td>
                  <td><%= trener.specialization %></td>
                  <% if (isAdmin) { %>
                    <td>
                      <a href="/treneri/<%= trener.id %>/edit" class="btn btn-sm btn-warning" aria-label="Upraviť">
                        <i class="fa-solid fa-pen-to-square" aria-hidden="true"></i>
                      </a>
                      <form action="/treneri/<%= trener.id %>/delete" method="POST" style="display:inline;">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Naozaj zmazať tohto trénera?');">
                          <i class="fa-solid fa-trash" aria-hidden="true"></i>
                        </button>
                      </form>
                    </td>
                  <% } %>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
