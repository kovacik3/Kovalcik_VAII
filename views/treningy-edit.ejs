<%- include("partials/header", { title: title }) %>

<h2>Upraviť tréning</h2>

<% if (errors && errors.length > 0) { %>
  <ul style="color: red;">
    <% errors.forEach(e => { %>
      <li><%= e %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/treningy/<%= trening.id %>/edit" method="POST">
  <div class="form-group">
    <label for="title">Názov tréningu</label><br>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= trening.title %>"
    />
  </div>

  <div class="form-group">
    <label for="start_at">Začiatok</label><br>
    <input
      type="datetime-local"
      id="start_at"
      name="start_at"
      value="<%= trening.start_at ? trening.start_at.toISOString().slice(0,16) : '' %>"
    />
  </div>

  <div class="form-group">
    <label for="end_at">Koniec</label><br>
    <input
      type="datetime-local"
      id="end_at"
      name="end_at"
      value="<%= trening.end_at ? trening.end_at.toISOString().slice(0,16) : '' %>"
    />
  </div>

  <div class="form-group">
    <label for="capacity">Kapacita</label><br>
    <input
      type="number"
      id="capacity"
      name="capacity"
      min="1"
      value="<%= trening.capacity %>"
    />
  </div>

  <div class="form-group">
    <label for="trainer_id">Tréner (ID)</label><br>
    <input
      type="number"
      id="trainer_id"
      name="trainer_id"
      min="1"
      value="<%= trening.trainer_id || '' %>"
    />
  </div>

  <button type="submit">Uložiť zmeny</button>
  <a href="/treningy">Späť na zoznam</a>
</form>

<%- include("partials/footer") %>
