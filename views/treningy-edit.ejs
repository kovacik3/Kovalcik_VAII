<%- include("partials/header") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1 class="mb-4">Upravi≈• tr√©ning</h1>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Chyby pri valid√°cii:</strong>
          <ul class="mb-0 mt-2">
            <% errors.forEach(e => { %>
              <li><%= e %></li>
            <% }) %>
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <form action="/treningy/<%= trening.id %>/edit" method="POST" class="js-validate" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="mb-3">
          <label for="title" class="form-label">N√°zov tr√©ningu</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= trening.title %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="start_at" class="form-label">Zaƒçiatok</label>
          <input
            type="datetime-local"
            class="form-control"
            id="start_at"
            name="start_at"
            value="<%= trening.start_at ? trening.start_at.toISOString().slice(0,16) : '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="end_at" class="form-label">Koniec</label>
          <input
            type="datetime-local"
            class="form-control"
            id="end_at"
            name="end_at"
            value="<%= trening.end_at ? trening.end_at.toISOString().slice(0,16) : '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="capacity" class="form-label">Kapacita</label>
          <input
            type="number"
            class="form-control"
            id="capacity"
            name="capacity"
            min="1"
            value="<%= trening.capacity %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="trainer_id" class="form-label">Tr√©ner</label>
          <select
            class="form-select"
            id="trainer_id"
            name="trainer_id"
            required
          >
            <option value="">-- vyber tr√©nera --</option>
            <% trainers.forEach(t => { %>
              <option
                value="<%= t.id %>"
                <%= String(trening.trainer_id) === String(t.id) ? 'selected' : '' %>
              >
                <%= t.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-start">
          <button type="submit" class="btn btn-primary">üíæ Ulo≈æi≈• zmeny</button>
          <a href="/treningy" class="btn btn-secondary">‚ùå Zru≈°i≈•</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
