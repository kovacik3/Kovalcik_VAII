<%- include("partials/header") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1 class="mb-4">Nový tréning (session)</h1>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Chyby pri validácii:</strong>
          <ul class="mb-0 mt-2">
            <% errors.forEach(e => { %>
              <li><%= e %></li>
            <% }) %>
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <form action="/treningy/new" method="POST" class="js-validate" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="mb-3">
          <label for="title" class="form-label">Názov tréningu</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= formData && formData.title ? formData.title : '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="start_at" class="form-label">Začiatok</label>
          <input
            type="datetime-local"
            class="form-control"
            id="start_at"
            name="start_at"
            value="<%= formData && formData.start_at ? formData.start_at : '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="end_at" class="form-label">Koniec</label>
          <input
            type="datetime-local"
            class="form-control"
            id="end_at"
            name="end_at"
            value="<%= formData && formData.end_at ? formData.end_at : '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="capacity" class="form-label">Kapacita</label>
          <input
            type="number"
            class="form-control"
            id="capacity"
            name="capacity"
            min="1"
            value="<%= formData && formData.capacity ? formData.capacity : '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="trainer_id" class="form-label">Tréner</label>
          <select
            class="form-select"
            id="trainer_id"
            name="trainer_id"
            required
          >
            <option value="">-- vyber trénera --</option>
            <% trainers.forEach(t => { %>
              <option
                value="<%= t.id %>"
                <%= formData && String(formData.trainer_id) === String(t.id) ? 'selected' : '' %>
              >
                <%= t.name %>
              </option>
            <% }) %>
          </select>
          <small class="text-muted">Vyber existujúceho trénera z databázy</small>
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-start">
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk me-2" aria-hidden="true"></i>
            Uložiť tréning
          </button>
          <a href="/treningy" class="btn btn-secondary">
            <i class="fa-solid fa-xmark me-2" aria-hidden="true"></i>
            Zrušiť
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
