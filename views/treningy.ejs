<%- include("partials/header", { title: title }) %>

<h2>Tréningy (sessions)</h2>

<p>
  <a href="/treningy/new">Pridať tréning</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Názov</th>
      <th>Začiatok</th>
      <th>Koniec</th>
      <th>Kapacita</th>
      <th>Tréner</th>
      <th>Akcie</th>
    </tr>
  </thead>
  <tbody>
    <% treningy.forEach(s => { %>
      <tr>
        <td><%= s.title %></td>
        <td>
          <% if (s.start_at) { %>
            <%= s.start_at.toLocaleString("sk-SK") %>
          <% } else { %>
            —
          <% } %>
        </td>
        <td>
          <% if (s.end_at) { %>
            <%= s.end_at.toLocaleString("sk-SK") %>
          <% } else { %>
            —
          <% } %>
        </td>
        <td><%= s.capacity %></td>
        <td><%= s.trainer_name || "—" %></td>
        <td>
          <a href="/treningy/<%= s.id %>/edit">Upraviť</a>
          |
          <form action="/treningy/<%= s.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Naozaj zmazať tento tréning?');">
              Zmazať
            </button>
          </form>
          |
          <a href="/rezervacie/new?treningId=<%= s.id %>">Rezervovať</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include("partials/footer") %>
